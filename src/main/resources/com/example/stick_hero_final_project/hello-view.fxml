<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="579.0" prefWidth="716.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.stick_hero_final_project.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Background Image -->
    <ImageView fitHeight="579.0" fitWidth="716.0">
        <image>
            <Image url="file:D:/Stick_Hero_Final_Project/src/main/java/com/example/stick_hero_final_project/Images/gamestart.jpeg" />
        </image>
    </ImageView>

    <!-- StackPane for Overlaying Button on Background Image -->
    <StackPane alignment="CENTER">
        <!-- Button with Image Graphic -->
        <Button fx:id="playButton" onAction="#onPlayButtonClick">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true">
                    <Image url="file:D:/Stick_Hero_Final_Project/src/main/java/com/example/stick_hero_final_project/Images/play_button.jpeg" />
                </ImageView>
            </graphic>
        </Button>
    </StackPane>
</VBox>
